<section class="posts">
  <%= render "shared/user_card", user: @author %>
  <div class="posts__expanded_view">
  <% @posts.each do |post|%>
    <%= link_to(user_post_path(user_id: @author.id, id: post.id)) do %>
      <%= render "shared/post_card", post: post %>
    <% end %>
      <ul class="posts__comments">
        <% post.most_recent_comments.each do |comment| %>
          <%= render "shared/comment_card", author: @author, comment: comment %>
        <% end %>
      </ul>
  <% end %>
  </div>
  <button class="posts__pagination" type="button">Pagination</button>
</section>

