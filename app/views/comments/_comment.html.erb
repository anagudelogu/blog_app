<li class="comment border rounded-md border-indigo-300 mb-2 p-1">
  <span class="text-xs font-semibold"><%= comment.author.name %></span>
  <p class="text-xs">
    <%= comment.text %>
  </p>
  <span class="text-xs text-right block mt-3" >
    <%= "#{time_ago_in_words(comment.created_at)} ago" %>
  </span>
  <% if can? :destroy, comment %>
    <%= button_to "Delete",
                  user_post_comment_path(current_user, comment.post, comment),
                  method: :delete,
                  form: { data: { turbo_confirm: 'Are you sure you want to delete this comment?' }} %>
  <% end %>
</li>