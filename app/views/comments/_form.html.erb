<%= form_with model: comment, url: user_post_comments_path(user, post), class: "mt-2" do |form| %>
      <%= form.text_area :text, placeholder: "Comment something..." ,class: "my-2 block w-full text-xs border-indigo-300 focus:border-indigo-600 rounded-lg min-h-[5rem] max-h-[6rem]" %>
      <%= form.submit class: "btn-primary block mx-auto" %>
<% end %>
