<section class="user">
  <%= render "shared/user_card", user: @user %>
  <div class="user__bio">
    <h3 class="bio__title">Bio</h3>
    <p class="bio__text">
    <%= @user.bio %>
    </p>
  </div>
  <ul class="user__post_list">
    <% @user.most_recent_posts.each_with_index do |post, index|%>
    <li>
      <%= render "shared/post_card", post: post, index: index+1%>
    </li>
    <% end %>
  </ul>
  <button type="button" class="user__posts_btn">
    See all posts
  </button>
</section>