<section>
  <%= render @user %>
  <div class="border rounded border-indigo-600 my-1 p-2">
    <h3 class="text-lg font-bold">Bio</h3>
    <p class="text-sm">
    <%= @user.bio %>
    </p>
  </div>
  <div id="posts-container">
    <%= render @user.most_recent_posts, show_comments: false %>     
  </div>
  <%= link_to "See all posts", user_posts_path(@user), class: "btn-primary block text-center" %>
</section>