<section>
  <%= render "shared/user_card", user: @user %>
  <div class="border rounded border-indigo-600 my-1 p-2">
    <h3 class="text-lg font-bold">Bio</h3>
    <p class="text-sm">
    <%= @user.bio %>
    </p>
  </div>
  <ul>
    <li class="my-3">
        <%= render @user.most_recent_posts, show_comments: false %>     
    </li>
  </ul>
  <%= link_to "See all posts", user_posts_path(@user), class: "btn-primary mx-auto block text-center" %>
</section>